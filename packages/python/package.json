{
  "name": "algorand-python-vscode",
  "displayName": "Algorand Python",
  "version": "1.0.1",
  "private": true,
  "description": "Tooling to support building with Algorand Python",
  "author": "Algorand Foundation",
  "publisher": "AlgorandFoundation",
  "license": "MIT",
  "keywords": [
    "algokit",
    "algorand",
    "avm",
    "algorand python",
    "python",
    "algokit algorand python",
    "puya",
    "puyapy",
    "algorand smart contracts"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "./images/icon.png",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neilcampbell/vscode-puya-py.git"
  },
  "bugs": {
    "url": "https://github.com/neilcampbell/vscode-puya-py/issues"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build-dev": "rimraf dist && npm run check-types && node esbuild.mjs",
    "build-prod": "rimraf dist && npm run check-types && npm run lint && node esbuild.mjs --production",
    "package": "npm run build-prod && vsce package",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm-run-all pretest:*",
    "pretest:build-extension": "npm run build-dev",
    "pretest:build-tests": "tsc -p . --outDir out",
    "test": "cross-env CODE_TESTS_WORKSPACE=\"testFixture\" node \"out/test/runTest\"",
    "audit": "better-npm-audit audit -l moderate",
    "pre-commit": "npm-run-all check-types lint:fix audit test",
    "semantic-test": "semantic-release-monorepo --branches enhancements",
    "build": "npm run build-prod"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5"
  },
  "devDependencies": {},
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:python",
    "onCommand:extension.algorandPython.restartLanguageServer"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "commands": [
      {
        "command": "algorandPython.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Algorand Python"
      }
    ],
    "configuration": {
      "title": "Algorand Python",
      "properties": {
        "algorandPython.languageServerPath": {
          "scope": "machine-overridable",
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Optional path to the directory containing the PuyaPy language server."
        }
      }
    }
  }
}