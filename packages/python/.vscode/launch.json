// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Algorand Python",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "${workspaceFolder}/examples/algorand-python"],
      "outFiles": ["${workspaceFolder}/dist/extension.js"],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "npm: build-dev"
    },
    {
      "name": "Debug Python",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "${workspaceFolder}/examples/python"],
      "outFiles": ["${workspaceFolder}/dist/extension.js"],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "npm: build-dev"
    },
    {
      "name": "Debug Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/common/src/test/run",
        "${workspaceFolder}/src/test/workspace"
      ],
      "outFiles": ["${workspaceFolder}/out/python/src/test/**/*.js"],
      "preLaunchTask": "npm: pretest"
    }
  ]
}
