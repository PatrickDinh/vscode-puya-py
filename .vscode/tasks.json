// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build-dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$esbuild-watch",
      "isBackground": false,
      "label": "algorand-python: build-dev",
      "options": {
        "cwd": "${workspaceRoot}/extensions/algorand-python"
      }
    },
    {
      "type": "npm",
      "script": "pretest",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$esbuild-watch",
      "isBackground": false,
      "label": "algorand-python: pretest",
      "options": {
        "cwd": "${workspaceRoot}/extensions/algorand-python"
      }
    }
  ]
}
