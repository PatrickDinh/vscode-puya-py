// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Algorand Python",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}/extensions/algorand-python"],
      "outFiles": ["${workspaceRoot}/extensions/algorand-python/dist/extension.js"],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "algorand-python: build-dev"
    },
    {
      "name": "Debug Algorand Python Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/extensions/algorand-python",
        "--extensionTestsPath=${workspaceRoot}/extensions/algorand-python/out/test/index",
        "${workspaceRoot}/testFixture"
      ],
      "outFiles": ["${workspaceRoot}/extensions/algorand-python/out/test/**/*.js"],
      "preLaunchTask": "algorand-python: pretest"
    }
  ]
}
