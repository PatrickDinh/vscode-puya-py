// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceRoot}/dist/extension.js"],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "npm: build-dev"
    },
    {
      "name": "Debug Simple Python",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "${workspaceFolder}/examples/simple-python"],
      "outFiles": ["${workspaceRoot}/dist/extension.js"],
      "autoAttachChildProcesses": true,
      "preLaunchTask": "npm: build-dev"
    },
    {
      "name": "Debug Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/out/test/index",
        "${workspaceRoot}/testFixture"
      ],
      "outFiles": ["${workspaceRoot}/out/test/**/*.js"],
      "preLaunchTask": "npm: pretest"
    }
  ]
}
